@model IEnumerable<WIPCream.Presentation.WUI.Models.Thread.ThreadUIDTO>

@{
    ViewBag.Title = "Index";
}
@Html.Partial("_Navigation")

<div id="wrapper">
    <div class="row content">
        <div class="col-xs-12">
            <div class="hpanel hgreen">
                <div class="panel-body">
                    <div class="hpanel">
                        <h2>Threads</h2>

                        <p>
                            @Html.ActionLink("Create New", "Create")
                        </p>
                        <table class="table">
                            <tr>
                                <th>
                                    Message
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.date)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <a href="/Threads/LoadDetails?id=@item.threadid">@Html.DisplayFor(modelItem => item.title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.date)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.threadid }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.threadid }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.threadid })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>